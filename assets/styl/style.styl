@import "variables"

*
	box-sizing border-box
	-webkit-font-smoothing antialiased

body
	margin 0
	font-family 'PT Sans', sans-serif
	font-weight 400

p, li
	line-height 1.5
.container
	max-width 1000px
	margin 0 auto
	padding 0 1em
	
	h1
		font-family 'PT Sans Narrow', sans-serif
		color brandColor
		padding 0.5em
		font-weight 700
		
	@media(max-width medium)
		max-width 46em
	@media(max-width large)
		max-width 60em
	@media(min-width large)
		max-width 73em
header
	background bgColor
	
	.container
		display flex
		justify-content space-between
		align-items center
nav
	ul
		display flex
		list-style none
	
		li
			margin-left 2em
		a
			text-decoration none
			color lighten(brandColor, 25%)
			padding 1em 2em
			font-weight 700
	
			&:hover
				color lighten(brandColor, 60%)
				border-bottom 2px solid lighten(brandColor, 25%)
				transition color 0.5s