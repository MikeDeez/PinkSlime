@import "variables"

*
	box-sizing border-box
	-webkit-font-smoothing antialiased

body
	font-family contentFont
	font-weight 700
	background-image url('../images/burger.png') 
	background-size 140px
	width 100%
	height auto
p, li
	line-height 1.5
.container
	max-width 960px
	margin 0 auto
	padding 1em
		
	@media(max-width medium)
		max-width 46em
	@media(max-width large)
		max-width 60em
	@media(min-width large)
		max-width 73em
		
	@media(min-width small)
		flex-direction column
		max-width small
header
	display flex
	flex-direction row
	padding-left 5em

.logo-bar
	position fixed
	.logo
		padding 1em

		background brandColor
		color bgColor
		font-size 1.5em
		
		h1
			font-family titleFont
			font-weight 700
			letter-spacing 2px
	.bar-btm
		padding 1em
		width 244px

		background bgColor
		color fgColor
		
	@media(max-width small)
		display flex
		position static
.location-container
	display flex
	flex-direction column
	
	max-width 960px
	padding-left 25em
.preloader-container, 
.noresults-container
	width 500px
	background rgba(bgColor, 95%)
	
	#preloader, #no-results
		padding 3em
		h1
			letter-spacing 1.5px
		h2
			letter-spacing 1px	
#location-link
	display block
	text-decoration none
a#location-link
	width 400px
	height auto
.location-results
	display flex
	background rgba(bgColor, 95%)
	color fgColor
	
	margin-bottom 1.5em
	width 500px
	
	@media(min-width small)
		flex 1
.location-results:hover
	transition background-color 1s
	background brandColor
	color bgColor
#results
	padding 1em
	h1
		letter-spacing 1.5px
	h2
		letter-spacing 1px

#location-distance
	display flex
	padding-left 25em
	margin-top -1.7em
#arrow, 
#norating, 
#face
	font-size 24px

